<div class="container">
    <div class="row">
        <div class="col-md-6 left-side text-center mt-5">
            <div class="center-div mt-5">
                <div class="bord">
                    <h3>Already have <br> an Account?</h3>
                </div>
                <div>
                    <h5>Sign in to Continue</h5>
                </div>
                <a class="Signbutton" href="/user/login">
                    <div class="border-around-small button"> 
                        <small>LOG IN</small>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6 right-side mt-2">
            <div class="center-div mt-5 user_login" id="login">
                <div class="container w-75 mt-2 py-3">
                    <div class="title">
                        <h2 class="font-weight-bold">Sign up</h2>
                        <small>Create new account</small>
                    </div>
                    <form action="/user/signup" method="POST">
                        <div class="form-group">
                            <small>Enter Email/Mobile Number</small>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter your name" name="name" id="emailField" required>
                            </div>
                        <div class="form-group">
                            <small>Enter Email/Mobile Number</small>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Email/Mobile Number" name="email" id="emailField" required>
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <small>Password</small>
                                <div class="input-group">
                                    <input type="password" class="form-control" placeholder="Password" name="password" id="passwordField" required>
                                </div>
                                <small>Retype password</small>
                                <div class="input-group">
                                    <input type="password" class="form-control" placeholder="Retype password" name="confirmPassword" id="retypePasswordField" required>
                                </div>
                              
                                
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark my-3">Sign up</button>
                    </form>


                    <% if (error && error.length > 0) { %>
                         <!-- Display error messages -->
                        <div class="alert alert-dismissible font-weight-bold" role="alert">
                            <p><%= error[0] %></p> <!-- Display only the first error message -->
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } else if (successMsg) { %>
                        <!-- Display success message -->
                        <div class="alert alert-success fade show" role="alert">
                            <%= successMsg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    

                    <!-- signup.ejs or your respective view file -->

            
                        
                </div>
            </div>
        </div>
    </div>
</div>
