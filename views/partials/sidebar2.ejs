
  <style>
    body {
      margin: 0;
      font-family: 'Arial', sans-serif;
    }

    #sidebar {
      width: 100%;
      max-width: 200px;
      height: 100%;
      position: fixed;
      top: 100px;
      left: -100%;
      background-color: #f1f1f1;
      padding-top: 20px;
      transition: left 0.3s ease-in-out;
    }

    #main-content {
      margin-left: 0;
      padding: 20px;
      transition: margin-left 0.3s ease-in-out;
    }

    @media screen and (min-width: 768px) {
      #sidebar {
        left: 0;
      }

      #main-content {
        margin-left: 250px;
      }
    }

    #menu-btn {
      display: block;
      background-color: #4CAF50;
      color: white;
      padding: 10px;
      text-align: center;
      cursor: pointer;
      display: none;
    }
  </style>

